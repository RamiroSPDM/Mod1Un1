<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h2>Agregar estadisticas</h2>
            <form action="/admin/estadisticas/agregar" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Nombre" name="nombre" >
                    </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Partidos Totales" name="partidos" >
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Goles Totales" name="goles" >
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Asistencias Totales" name="asistencias" >
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Tarjetas Amarillas Totales" name="amarillas" > 
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Tarjetas Rojas Totales" name="rojas" >
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
              </form>
              {{#if error}}
              <h5>{{message}}</h5>
                {{/if}}
        </div>
    </div>
</div>